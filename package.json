{
  "name": "wptide.org",
  "version": "1.0.0-beta",
  "description": "Tide is a WordPress.org Component and built as an Infrastructure as Code (IaC) monorepo that contains a Firebase hosted static documentation website built with VuePress, along with an implementation of the Tide API using the OpenAPI v3 Specification and deployed to Cloud Functions, with Cloud Run servers auditing wp.org themes & plugins, backed by Datastore, and orchestrated with Pub/Sub events.",
  "main": "index.js",
  "author": {
    "name": "Tide Maintainers",
    "email": "support@wptide.org",
    "url": "https://wptide.org"
  },
  "license": "MIT",
  "private": true,
  "scripts": {
    "copy": "cp .env.dist .env && cp .env.server.dist .env.server && cp .firebaserc.dist .firebaserc",
    "docs:build": "vuepress build web",
    "docs:serve": "vuepress dev web",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "setup": "npm i && cd app && npm i && composer install && cd -",
    "start:emulator": "firebase emulators:start",
    "start:server:lighthouse": "SERVER_PATH=./app/src/run/lighthouseServer SERVER_TARGET=lighthouseServer functions-framework --target=tide --signature-type=http --port=5010",
    "start:server:phpcs": "SERVER_PATH=./app/src/run/phpcsServer SERVER_TARGET=phpcsServer functions-framework --target=tide --signature-type=http --port=5011",
    "start:server:proxy": "cd app && node proxyServer.js",
    "start:server:sync": "SERVER_PATH=./app/src/run/syncServer SERVER_TARGET=syncServer functions-framework --target=tide --signature-type=http --port=5012",
    "test": "NODE_ENV=test jest --detectOpenHandles --forceExit --verbose",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:coverage": "NODE_ENV=test jest --detectOpenHandles --forceExit --coverage --coverageDirectory ./app/tests/coverage"
  },
  "dependencies": {
    "dotenv": "^8.2.0"
  },
  "devDependencies": {
    "@google-cloud/functions-framework": "^1.7.1",
    "@vuepress/plugin-back-to-top": "^1.8.1",
    "@vuepress/plugin-pwa": "^1.8.1",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.20.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-jsdoc": "^32.0.0",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "typescript": "^4.1.5",
    "vuepress": "^1.8.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run test"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "**/app/src/**/*.js",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/app/src/controllers/index.js",
      "<rootDir>/app/src/run/phpcsServer.js",
      "<rootDir>/app/src/run/proxyServer.js",
      "<rootDir>/app/src/run/syncServer.js",
      "<rootDir>/app/src/services/datastore.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.[jt]s?(x)",
      "**/?(*.)+(test).[jt]s?(x)"
    ]
  }
}
